<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bacc"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="#3fff"
        android:orientation="vertical">

        <LinearLayout

            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@mipmap/bar">
            <ImageButton
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="#00000000"
                app:srcCompat="@mipmap/line" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.2"></LinearLayout>
            <ImageButton
                android:id="@+id/buy222"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="#00000000"
                app:srcCompat="@mipmap/shopping2" />
            <ImageButton
                android:id="@+id/buy"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="#00000000"
                app:srcCompat="@mipmap/basket" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:layout_margin="5dp"
                android:layout_weight="0.3"
                android:id="@+id/okbuy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"        />


            <LinearLayout
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sum"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="結帳金額" />

                    <TextView
                        android:id="@+id/sumprice"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:text="0" />

                    <Button
                        android:id="@+id/dis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:text="商品消磁"
                        android:textSize="25dp"
                        android:textColor="#fff"
                        android:background="@drawable/b3"/>
                </LinearLayout>


                <Button
                    android:id="@+id/button4"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:text="結帳"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                    android:background="@drawable/bt_select2"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.9"
        android:padding="5dp"
        android:background="#534741">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"></LinearLayout>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:background="#00000000"
            app:srcCompat="@mipmap/a2" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="#00000000"
            app:srcCompat="@mipmap/barcode" />


        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="#00000000"
            app:srcCompat="@mipmap/settings_2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="#50000000"
        android:orientation="vertical"
      >
        <LinearLayout

            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@mipmap/bar">
            <ImageButton
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="#00000000"
                app:srcCompat="@mipmap/line" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.2"></LinearLayout>

            <ImageButton
                android:id="@+id/buy"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="#00000000"
                app:srcCompat="@mipmap/basket" />

        </LinearLayout>
        <TextView

            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#50000000"
            android:fontFamily="casual"
            android:gravity="center"
            android:text=""
            android:textColor="#9fffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:layout_margin="40dp"
                app:srcCompat="@mipmap/correct" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="是否要將商品寄送到府?" />

                <Button
                    android:id="@+id/button6"
                    android:layout_margin="15dp"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/b1"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    android:text="是" />

                <Button
                    android:id="@+id/button7"
                    android:layout_margin="15dp"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:background="@drawable/b2"
                    android:textColor="#fff"
                    android:text="否" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.9"
        android:padding="5dp"
        android:background="#534741">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"></LinearLayout>

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:background="#00000000"
            app:srcCompat="@mipmap/a2" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="#00000000"
            app:srcCompat="@mipmap/barcode" />


        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="#00000000"
            app:srcCompat="@mipmap/settings_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

</LinearLayout>
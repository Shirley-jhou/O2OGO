<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bacc"

   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="#3fff"
        android:orientation="vertical">

        <LinearLayout

            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@mipmap/bar">
            <ImageButton
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="#00000000"
                app:srcCompat="@mipmap/line" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.2"></LinearLayout>

            <ImageButton
                android:id="@+id/buy"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="#00000000"
                app:srcCompat="@mipmap/basket" />


        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thingimageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="0.15"
                    android:background="#5fffffff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:background="@drawable/bt_select2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="$"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/itemprice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    <TextView
                        android:paddingTop="3dp"
                        android:id="@+id/thingsname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:text="thing"
                        android:paddingRight="10dp"
                        android:textColor="#fff"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                   </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.34"
                android:layout_gravity="start"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/vote"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="@drawable/button_bg_select"
                    android:text="投票詢問" />
            </LinearLayout>
            <TextView
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#534741"
                android:textSize="16dp"
                android:text="  商品介紹:"
                android:layout_gravity="center"
                android:gravity="start"
                android:scrollbars="vertical"/>
            <TextView
                android:id="@+id/caption"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#7143CC"
                android:textSize="16dp"
                android:layout_weight="0.3"
                android:scrollbars="vertical"/>
            <TextView
                android:id="@+id/cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="16dp"
                android:text="  網友評論"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/b3"
                android:scrollbars="vertical"/>
            <TextView
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:layout_margin="10dp"
                android:textColor="#534741"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="0.3"
                android:scrollbars="vertical"/>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.9"
        android:padding="5dp"
        android:background="#534741">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"></LinearLayout>
        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:background="#00000000"
            app:srcCompat="@mipmap/a2" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="#00000000"
            app:srcCompat="@mipmap/barcode2" />


        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="#00000000"
            app:srcCompat="@mipmap/settings_" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

</LinearLayout>